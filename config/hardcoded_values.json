      "check_interval": 1.0,
      "max_concurrent_tasks": 5,
      "max_retries": 3
    },
    "sync": {
      "sync_interval": 3600,
      "retry_interval": 300,
      "max_retries": 3
    },
    "ui": {
      "refresh_interval": 1.0,
      "lcd_enabled": true,
      "encoder_enabled": true,
      "auto_refresh": true
    }
  },
  "controllers": {
    "heater": {
      "max_temperature": 35.0,
      "hysteresis": 1.0,
      "safety_enabled": true
