        "DISPLAYON": 4,
        "DISPLAYOFF": 0,
        "CURSORON": 2,
        "CURSOROFF": 0,
        "BLINKON": 1,
        "BLINKOFF": 0,
        "ENTRYRIGHT": 0,
        "ENTRYLEFT": 2,
        "ENTRYSHIFTINCREMENT": 1,
        "ENTRYSHIFTDECREMENT": 0,
        "8BITMODE": 16,
        "4BITMODE": 0,
        "2LINE": 8,
        "1LINE": 0,
        "5x10DOTS": 4,
        "5x8DOTS": 0
