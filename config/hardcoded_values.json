      "streaming_quality": 60,
      "motion_threshold": 0.1,
      "motion_sensitivity": 0.5,
      "motion_cooldown": 30
    },
    "streaming": {
      "port": 8080,
      "host": "0.0.0.0",
      "max_clients": 10,
      "width": 640,
      "height": 480,
      "fps": 30,
      "quality": 80,
      "recording_duration": 3600,
      "format": "mjpeg"
    },
    "snapshots": {
      "max_snapshots": 1000,
      "retention_days": 30,
      "width": 1280,
      "height": 720,
      "quality": 90,
      "format": "jpg",
      "annotate": true,
      "show_timestamp": true,
      "show_sensors": true,
      "show_terrarium": true
