      "air_quality_thresholds": {
        "excellent": 0,
        "good": 30,
        "moderate": 60,
        "poor": 80,
        "hazardous": 100
      }
    },
    "feeder_sas": {
      "positions": {
        "closed": 0,
        "half_open": 45,
        "open": 90,
        "full_open": 135
